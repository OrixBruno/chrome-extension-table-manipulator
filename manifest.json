{
    "manifest_version": 2,
    "version": "0.0.2",
    "name": "Hello World",
    "description": "Extens√£o Hello World - iMasters",
    "author": "Diego Martins de Pinho",
    "browser_action": {
        "default_title": "Hello World",
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "run_at": "document_end",
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}